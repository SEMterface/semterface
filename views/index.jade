extends layout

block append content
  div#remotesVideos(class='center')
  video#localVideo(class='center')

  div(class='center')
    button#w(type='button') W
  div#buttons(class='center')
    button#a(type='button') A
    button#s(type='button') S
    button#d(type='button') D
  form
    label(for="mag") Magnification:
    input(type="range" name="Magnification" id="mag" value="220" min="80" max="10000" data-show-value="true" data-popup-enabled="true" data-hightlight="true")
